{
  "$id": "shopify_connector",
  "$schema": "https://schema.yext.com/config/km/connector/v1",
  "displayName": "Shopify Connector",
  "entityType": "product",
  "source": {
    "sourceConfig": {
      "apiPushConfig": {
        "app": "108443",
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "products",
      "path": "[]"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Parent ID",
        "path": "productId"
      },
      {
        "type": "JSON",
        "header": "Title",
        "path": "title"
      },
      {
        "type": "JSON",
        "header": "Body",
        "path": "bodyHtml"
      },
      {
        "type": "JSON",
        "header": "Product Type",
        "path": "productType"
      },
      {
        "type": "JSON",
        "header": "Price",
        "path": "price"
      },
      {
        "type": "JSON",
        "header": "Currency Code",
        "path": "currencyCode"
      },
      {
        "type": "JSON",
        "header": "SKU",
        "path": "sku"
      },
      {
        "type": "JSON",
        "header": "Stock Status",
        "path": "stockStatus"
      },
      {
        "type": "JSON",
        "header": "Status",
        "path": "status"
      },
      {
        "type": "JSON",
        "header": "Images",
        "path": "images[0].src"
      }
    ]
  },
  "mappings": [
    {
      "field": "c_shopifyProductStatus",
      "header": "Status",
      "subfieldPath": []
    },
    {
      "field": "price",
      "header": "Currency Code",
      "subfieldPath": [
        {
          "name": "currencyCode"
        }
      ]
    },
    {
      "field": "c_shopifyProductType",
      "header": "Product Type",
      "subfieldPath": []
    },
    {
      "field": "price",
      "header": "Price",
      "subfieldPath": [
        {
          "name": "value"
        }
      ]
    },
    {
      "field": "parentProduct",
      "header": "Parent ID",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Title",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "ID",
      "subfieldPath": []
    },
    {
      "field": "sku",
      "header": "SKU",
      "subfieldPath": []
    },
    {
      "field": "stockStatus",
      "header": "Stock Status",
      "subfieldPath": []
    },
    {
      "field": "richTextDescription",
      "header": "Body",
      "subfieldPath": []
    },
    {
      "field": "photoGallery",
      "header": "Images",
      "subfieldPath": [
        {
          "index": 0
        },
        {
          "name": "image"
        },
        {
          "name": "url"
        }
      ]
    }
  ],
  "scheduleConfig": {
    "useSourceSchedule": true
  }
}
